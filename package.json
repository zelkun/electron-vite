{
  "name": "electron-vite",
  "version": "1.0.0",
  "description": "An Electron application with Vue",
  "main": "./out/main/index.js",
  "author": "ZelKun",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "chcp 65001 && electron-vite preview",
    "dev": "chcp 65001 && electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder -p always"
  },
  "build": {
    "productName": "electron-vite",
    "asar": true,
    "asarUnpack": [],
    "appId": "kr.kro.zelkun.electron.vite",
    "publish": [
      {
        "provider": "generic",
        "url": "http://releases.electron.vite:9000"
      }
    ],
    "extraFiles": [
      {
        "from": "build/hosts.bat",
        "to": "resources/host.bat",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "autoit",
        "to": "resources/autoit",
        "filter": [
          "**/*.exe"
        ]
      }
    ],
    "win": {
      "icon": "resources/icon.png",
      "target": "nsis",
      "sign": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "language": 1042,
      "createDesktopShortcut": true,
      "perMachine": false,
      "shortcutName": "${productName}",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "uninstallDisplayName": "${productName}"
    },
    "files": [
      "**/*",
      "!build{,/**/*}",
      "!**{.giy,.hg,.svn,CVS,RCS,SCCS,__pycache__,.DS_Store,thumbs.db,.gitignore,.gitkeep,.gitattributes}",
      "!.yarn{,/**/*}",
      "!**/.vscode/*",
      "!**/*copy.js",
      "!**/electron-build/*",
      "!src/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!.*",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md,.editorconfig,installer.nsh}",
      "!{.env,.env.*,.npmrc,pnpm-lock.yaml,.yarnrc.yml,vite.config.js}",
      "!*.{bat,cjs,json,md,mjs,msi,nsh,yml}",
      "!test/*",
      "!**/*_bk",
      "!*_vuetest",
      "!**/*.org",
      "!autoit/**/*",
      "!tools/*"
    ]
  },
  "dependencies-fail": {},
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "bootstrap": "^5.3.3",
    "crypto-js": "^4.2.0",
    "electron-dl": "^4.0.0",
    "electron-log": "^5.3.0",
    "electron-progressbar": "^2.2.1",
    "electron-updater": "^6.3.9",
    "fast-xml-parser": "^5.0.6",
    "he": "^1.2.0",
    "html-entities": "^2.5.2",
    "html-escaper": "^3.0.3",
    "jquery": "^3.7.1",
    "oracledb": "^6.7.2",
    "pg": "^8.13.3",
    "sqlite3": "^5.1.7",
    "vue-router": "4.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@rushstack/eslint-patch": "^1.10.5",
    "@types/crypto-js": "^4.2.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "chromedriver": "^133.0.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-chromedriver": "^33.4.1",
    "electron-vite": "^3.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.5.2",
    "puppeteer-core": "^22.3.0",
    "selenium-webdriver": "^4.29.0",
    "spectron": "^19.0.0",
    "vite": "^6.1.1",
    "vue": "^3.5.13",
    "webdriverio": "^9.10.0"
  }
}
